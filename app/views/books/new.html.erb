<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <li class="book_title">
      <%= f.text_field :title %>
    </li>
  </div>
  <div class="field">
    <label for="book-body">Body</label>
    <li class="book_body">
      <%= f.text_area :body %>
    </li>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>

